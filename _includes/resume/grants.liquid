<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign grants = data[1] | sort: 'startDate' | reverse %}
  {% for grant in grants %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          {% if grant.startDate %}
            {% assign startDate = grant.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = grant.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Ongoing' %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ grant.url }}">{{ grant.title }}</a>
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ grant.description }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ grant.role }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ grant.amount }}</h6>
          <ul class="items">
            {% for item in grant.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
